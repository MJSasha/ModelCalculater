@inherits Dialog<InputDialogParams, string>

<DialogLayout IsDisplayed="IsDisplayed">
    <Modal Title="@Parameters.Title" OnClose="() => this.Cancel()" DispalyCenter="true" OnKeyEnterPressed="OnKeyEnterPressed">
        <Content>
            <input type="text" class="form-control mt-2" @bind-value="Value" @bind-value:event="oninput" />
        </Content>
        <Footer>
            <div class="mt-3">
                <ModalButton class="btn-outline-danger" OnClick="() => this.Cancel()">@LocalizationService.Localization.Common_Cancel</ModalButton>
                <ModalButton class="btn-outline-success" OnClick="() => this.Close(Value)">@LocalizationService.Localization.Common_Ok</ModalButton>
            </div>
        </Footer>
    </Modal>
</DialogLayout>

@code {
    protected string Value { get; set; }

    //protected override async void On()
    //{
    //    Value = "";
    //    StateHasChanged();
    //}

    protected void OnKeyEnterPressed()
    {
        this.Close(Value);
    }
}