@inherits Dialog<object, object>

<DialogLayout IsDisplayed="IsDisplayed">
    <Modal Title="@LocalizationService.Localization.InfoDialog_Title" OnClose="() => this.Close(null)" OnKeyEnterPressed="OnKeyEnterPressed" DispalyCenter="true">
        <Content>
            <div class="d-flex flex-column justify-content-start align-items-start mt-2">
                <div>@LocalizationService.Localization.InfoDialog_DescriptionText</div>
            </div>
        </Content>
        <Footer>
            <div class="mt-3">
                <ModalButton class="btn-outline-success" OnClick="() => this.Close(null)">@LocalizationService.Localization.Common_Ok</ModalButton>
            </div>
        </Footer>
    </Modal>
</DialogLayout>

@code {

    protected void OnKeyEnterPressed()
    {
        this.Close(null);
    }
}